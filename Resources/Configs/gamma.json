{
    "//": "Name of the instance",
    "name": "Gamma",
    "//": "Default command prefix for the instance",
    "prefix": "/",
    "//": "Token file name/location, relative to /Secret/.",
    "token": "gamma_token.txt",

    "//": "Base intents to use, in [none|default|all]",
    "base_intents": "default",
    "//": "Intents to toggle from base",
    "target_intents": ["message_content", "members"],

    "//": "Extensions (from /Extensions/.) to enable",
    "extensions": ["Audio", "Common", "Evaluation", "Integration", "Inventory", "System", "Temporary", "Twitch", "Webserver"],
    "//": "Cogs to disable from base_extensions",
    "unload_cogs": ["Automath"],

    "//": "Base color to use in embeds and elements, in hex",
    "base_color": "ff9900",

    "//": "Database connection string file, relative to /Secret/.",
    "database": "gamma_db.txt",
    "//": "Schema to use in the database for bot-specific tables",
    "schema": "gamma",
    "//": "Port used for the bot's webserver",
    "port": 6861,
    "//": "Credentials for Twitch, first line is client ID, second line is client secret",
    "twitch": "twitch.txt"
}